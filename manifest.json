{
  "manifest_version": 3,
  "name": "Summarize & Draft (Claude)",
  "version": "1.0",
  "description": "Two floating emoji buttons: Summarize & Draft response using Claude API",
  "permissions": ["activeTab", "scripting", "nativeMessaging"],
  "host_permissions": ["https://api.anthropic.com/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube-content.js"]
    }
  ]
}
